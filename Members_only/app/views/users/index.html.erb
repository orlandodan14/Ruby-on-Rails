<% provide(:title, 'All users') %>
<h1>All Users</h1>

<ul class="users">
	<% @users.each do |user| %>
		<li>
			<%= gravatar_for user, size: 50 %>
			<%= link_to user.name, user %>
			<% if curr_user.admin? && curr_user !=  user %>
				<span class="btn btn-default"><%= link_to "Delete", user, method: :delete, data: { confirm: "Are you sure?" } %></span>
			<% end %>
		</li>
	<% end %>
</ul>

<div class="container center">
	<%= will_paginate %>
</div>
